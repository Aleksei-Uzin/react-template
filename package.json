{
  "name": "react-template",
  "version": "1.0.0",
  "description": "A basic React template with TypeScript, Webpack, and SCSS",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "format:check": "prettier --check src/**/*.{ts,tsx,css,scss}",
    "format:write": "prettier --write src/**/*.{ts,tsx,css,scss}",
    "lint": "eslint src/ --ext .ts,.tsx",
    "prepare": "husky && husky install",
    "start": "webpack serve --open --config webpack.dev.js",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aleksei-Uzin/react-template.git"
  },
  "keywords": [
    "react",
    "template",
    "typescript",
    "webpack",
    "scss"
  ],
  "author": "Aleksei Uzin <aleksei.uzin@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Aleksei-Uzin/react-template/issues"
  },
  "homepage": "https://github.com/Aleksei-Uzin/react-template#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "7.27.1",
    "@babel/preset-typescript": "7.27.1",
    "@eslint/js": "9.36.0",
    "@pmmmwh/react-refresh-webpack-plugin": "0.6.1",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "30.0.0",
    "@types/react": "19.2.0",
    "@types/react-dom": "19.1.9",
    "css-loader": "7.1.2",
    "css-minimizer-webpack-plugin": "7.0.2",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-react": "7.37.5",
    "globals": "16.4.0",
    "html-webpack-plugin": "5.6.4",
    "husky": "9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "lint-staged": "16.2.3",
    "mini-css-extract-plugin": "2.9.4",
    "prettier": "3.6.2",
    "react-refresh": "0.18.0",
    "sass": "1.93.2",
    "sass-loader": "16.0.5",
    "style-loader": "4.0.0",
    "ts-loader": "9.5.4",
    "typescript": "5.9.3",
    "typescript-eslint": "8.45.0",
    "webpack": "5.101.3",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.2",
    "webpack-merge": "6.0.1"
  },
  "dependencies": {
    "@svgr/webpack": "8.1.0",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "lint-staged": {
    "src/**/*": "prettier --write --ignore-unknown",
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
